<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--<Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rent a You" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/h_static_text_title"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#37145C"
            android:hint="@string/h_home_to_place"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/h_courage_desc_place_to_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_margin="30sp"
            android:hint="@string/h_user_place_to_vehicle_courage_text"
            android:textColorHint="#6A6565"
            android:textSize="16sp" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp"


            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/galle"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/h_place_name_galle"
                android:layout_width="70dp"
                android:layout_height="54dp"
                android:layout_margin="80sp"
                android:hint="@string/h_user_place_name_galle"
                android:textColorHint="#F4EFEF"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h_place_name_galle_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:hint="@string/h_user_place_description_galle"
            android:textColorHint="#0E0D0D"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp"


            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/nuwaraeliya"
                />

            <TextView
                android:id="@+id/h_place_name_neliya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:hint="@string/h_user_place_name_nuwaraeliya"
                android:textColorHint="#171515"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h_place_name_neliya_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:hint="@string/h_user_place_description_n"
            android:textColorHint="#0E0E0E"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp"


            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/kandy"
                />

            <TextView
                android:id="@+id/h_place_name_kandy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:hint="@string/h_user_place_name_kandy"
                android:textColorHint="#090909"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h_place_name_kandy_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:hint="@string/h_user_place_description_k"
            android:textColorHint="#131313"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp"


            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/matara"
                />



            <TextView
                android:id="@+id/h_place_name_matara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:hint="@string/h_user_place_name_matara"
                android:textColorHint="#171515"
                android:textSize="24sp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h_place_name_matara_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:hint="@string/h_user_place_description_m"
            android:textColorHint="#000000"
            android:textSize="18sp" />


        <Button
            android:id="@+id/h_click_from_place_to_vehicle"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="0sp"
            android:background="#37145C"
            android:hint="@string/h_user_place_to_vehicle"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp" />


    </LinearLayout>


</androidx.core.widget.NestedScrollView>
