<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginTop="25dp"
android:layout_marginStart="15dp"
android:layout_marginEnd="15dp"
app:cardElevation="50dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/h_vehicle_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"
        />


    <EditText
        android:id="@+id/h_input_type_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vehicle Type"
        android:textAlignment="center"
        android:layout_below="@+id/h_vehicle_image"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />


    <EditText
        android:id="@+id/h_input_make_v"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_type_v"
        android:layout_marginTop="10dp"
        android:text="Vehicle Make"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/h_input_plate_v"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_make_v"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="5dp"
        android:text="Vehcile Register Plate"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/h_input_location_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_plate_v"
        android:text="Vehcile Location "
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/h_input_people_v"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_location_v"
        android:layout_marginTop="2dp"
        android:text="Vehicle Passengers "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/h_input_price_v"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_people_v"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="7dp"
        android:text="Vehicle Price "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/h_input_desc_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_price_v"
        android:text="Vehicle Description "
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <EditText
        android:id="@+id/h_input_name_v"
        android:layout_width="207dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_desc_v"
        android:layout_marginTop="2dp"
        android:text="Owner Name "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/h_input_mobile_v"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_name_v"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-44dp"
        android:layout_marginEnd="3dp"
        android:text="Owner Mobile "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />


    <Button
        android:id="@+id/h_vehicle_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h_input_name_v"
        android:layout_marginTop="2dp"
        android:text="UPDATE"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

</RelativeLayout>

</androidx.cardview.widget.CardView>