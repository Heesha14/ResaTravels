<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="25dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/h_admin_add_placename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textAlignment="center"
            android:layout_below="@+id/place_image"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/h_admin_add_placeprovince"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_admin_add_placename"
            android:text="Province"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/heesha_admin_add_placemobile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_admin_add_placeprovince"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-43dp"
            android:layout_marginEnd="1dp"
            android:text="Mobile"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/h_admin_add_placedescription"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_below="@+id/heesha_admin_add_placemobile"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <Button
            android:id="@+id/h_select_place_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_admin_add_placedescription"
            android:layout_marginTop="2dp"
            android:text="UPDATE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <Button
            android:id="@+id/h_delete_place_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_select_place_btn"
            android:layout_marginTop="2dp"
            android:text="DELETE"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>