<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="25dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/h_admin_add_place_input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textAlignment="center"
            android:textColor="#111112"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/h_admin_add_place_input_name"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/h_admin_add_place_input_province"
            android:layout_width="175dp"
            android:layout_height="36dp"
            android:layout_below="@+id/place_image"
            android:text="Province"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/heesha_admin_add_place_input_mobile"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/h_admin_add_place_input_province"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-36dp"
            android:layout_marginEnd="0dp"
            android:textStyle="bold"
            android:text="Mobile"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/h_admin_add_place_input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heesha_admin_add_place_input_mobile"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>